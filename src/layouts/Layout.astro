---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const estrellas = Array.from({ length: 10 }, () =>
  Math.random() > 0.5 ? "gold" : "silver"
);

const height = 2150;
---

<!doctype html>
<html class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body class="font-mono">
    <div class=`flex flex-col h-[2150px] w-full justify-between `>
      <Navbar nombre="nombre" />

      <div class="flex w-full h-full z-40 mb-30">
        <slot/>
      </div>

      <footer
        class="flex w-full h-auto justify-center items-center py-5 gradient-footer text-[var(--color-text)]"
      >
        Te espero en mi fiesta
      </footer>
    </div>

    <script type="module">
      const total = 200;
      const body = document.body;

      // Tamaño personalizado (puede ser fijo o dinámico)
      const width = window.innerWidth - 30; // px
      const height = 2050// px

      for (let i = 0; i < total; i++) {
        const star = document.createElement("i");
        star.className = "bi bi-star-fill";
        const isGold = Math.random() > 0.5;

        const x = Math.random() * width;
        const y = Math.random() * height;

        Object.assign(star.style, {
          position: "absolute",
          top: `${y}px`,
          left: `${x}px`,
          color: isGold ? "#FFD700" : "#C0C0C0",
          fontSize: `${Math.random() * 1.5 + 0.5}rem`,
          zIndex: 0,
          opacity: 0.7,
          pointerEvents: "none",
        });

        body.appendChild(star);
      }
    </script>
  </body>
</html>
