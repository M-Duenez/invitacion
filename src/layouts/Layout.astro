---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const estrellas = Array.from({ length: 10 }, () =>
  Math.random() > 0.5 ? "gold" : "silver"
);

const height = 2150;
---

<!doctype html>
<html class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Hillary Sofia</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="font-mono">
    <div class=`flex flex-col h-[3800px] lg:h-[4000px] w-full justify-between `>
      <Navbar nombre="Celebraci칩n de mis XV a침os" />

      <div class="fixed right-2 top-42 z-50 gap-4">
        <!-- Bot칩n de Play/Pause -->
        <button
          id="audioBtn"
          class="w-14 h-14 flex items-center justify-center rounded-full bg-black hover:bg-black text-white shadow-lg transition"
        >
          <!-- Icono Play por defecto -->
          <svg
            id="playIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M8 5v14l11-7z"></path>
          </svg>
          <!-- Icono Pause oculto -->
          <svg
            id="pauseIcon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8 hidden"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"></path>
          </svg>
        </button>

        <!-- Reproductor de audio oculto -->
        <audio
          id="myAudio"
          src="https://www.googleapis.com/drive/v3/files/1sho-ro9Tz_NyhXJ-d39rY9xA87-MoL-t?
alt=media&key=AIzaSyDVMziNb-IQImPRTVxWJEIvZaIi2WWHRW8"
        >
        </audio>
      </div>

      <div class="flex w-full h-full z-40 mb-30">
        <slot />
      </div>

      <footer
        class="flex w-full h-auto justify-center items-center py-5 gradient-footer titulo font-bold text-2xl text-black dark:text-[var(--color-text)]"
      >
        I Love You So Much 游삤游낕
      </footer>
    </div>

    <script type="module">
      const total = 450;
      const body = document.body;

      // Tama침o personalizado (puede ser fijo o din치mico)
      const width = window.innerWidth - 30; // px
      const height = 3700; // px

      for (let i = 0; i < total; i++) {
        const star = document.createElement("i");
        star.className = "bi bi-star-fill";
        const isGold = Math.random() > 0.5;

        const x = Math.random() * width;
        const y = Math.random() * height;

        Object.assign(star.style, {
          position: "absolute",
          top: `${y}px`,
          left: `${x}px`,
          color: isGold ? "#FFD700" : "#C0C0C0",
          fontSize: `${Math.random() * 1.5 + 0.5}rem`,
          zIndex: 0,
          opacity: 0.7,
          pointerEvents: "none",
        });

        body.appendChild(star);
      }
    </script>
  </body>
</html>
