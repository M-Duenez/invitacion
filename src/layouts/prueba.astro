---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html class="max-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <div class="flex flex-col h-screen w-full justify-between gap-y-5">
      <Navbar nombre="nombre" />
      
      <div class="">
        <slot/>
      </div>

      <footer class="flex w-full justify-center items-center py-5 gradient-footer text-[var(--color-text)]">
        Te espero en mi fiesta
      </footer>

    </div>


    <script>
      // Add random glitter particles
      const bg: any = document.querySelector(".invitation-bg");
      for (let i = 0; i < 50; i++) {
        const glitter = document.createElement("div");
        glitter.className = "glitter";

        // Random properties
        const size = Math.random() * 3 + 1;
        const posX = Math.random() * 100;
        const delay = Math.random() * 5;
        const duration = Math.random() * 3 + 3;

        glitter.style.width = `${size}px`;
        glitter.style.height = `${size}px`;
        glitter.style.left = `${posX}%`;
        glitter.style.top = `-10px`;
        glitter.style.animationDelay = `${delay}s`;
        glitter.style.animationDuration = `${duration}s`;

        bg.appendChild(glitter);
      }
    </script>
  </body>
</html>

<style>
  
  .invitation-bg {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: var(--gradient-secondary);
    overflow: hidden;
  }

  /* Base texture */
  .invitation-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 1% 5%,
        var(--color-secondary) 0%,
        transparent 15%
      ),
      radial-gradient(
        circle at 85% 90%,
        var(--color-secondary) 0%,
        transparent 15%
      ),
      radial-gradient(
        circle at 50% 60%,
        var(--color-secondary) 0%,
        transparent 25%
      ),
      radial-gradient(
        circle at 95% -10%,
        var(--color-secondary) 0%,
        transparent 15%
      ),
      radial-gradient(
        circle at 0% 95%,
        var(--color-secondary) 0%,
        transparent 15%
      ),
      radial-gradient(
        circle at 50% -05%,
        var(--color-secondary) 0%,
        transparent 15%
      );
  }

  /* Improved wavy lines - now actually wavy */
  .wavy-line {
    position: absolute;
    height: 100vh;
    width: 150%;
    left: -25%;
    overflow: hidden;
  }

  .wavy-line::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 5px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(192, 192, 192, 0.7),
      transparent
    );
    animation: wave 12s infinite linear;
  }

  .wavy-line:nth-child(1)::before {
    top: 30%;
    animation-delay: 0s;
  }

  .wavy-line:nth-child(2)::before {
    top: 60%;
    animation-delay: 2s;
  }

  /* Stars */
  .star {
    position: absolute;
    background-color: var(--color-text);
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
    animation: twinkle 3s infinite alternate;
  }

  /* Crowns - larger than stars */
  .crown {
    position: absolute;
    width: 50px;
    height: 50px;
    background-color: var(--color-start);
    clip-path: polygon(
      50% 0%,
      60% 20%,
      100% 20%,
      70% 40%,
      90% 70%,
      50% 50%,
      10% 70%,
      30% 40%,
      0% 20%,
      40% 20%
    );
    opacity: 0.7;
    animation: crown-glow 4s infinite alternate;
  }

  /* Different star sizes and positions */
  .star:nth-child(3) {
    width: 15px;
    height: 15px;
    top: 20%;
    left: 15%;
  }
  .star:nth-child(4) {
    width: 10px;
    height: 10px;
    top: 40%;
    left: 80%;
  }
  .star:nth-child(5) {
    width: 8px;
    height: 8px;
    top: 70%;
    left: 30%;
  }
  .star:nth-child(6) {
    width: 12px;
    height: 12px;
    top: 25%;
    left: 65%;
  }
  .star:nth-child(7) {
    width: 20px;
    height: 20px;
    top: 75%;
    left: 75%;
    animation-delay: 1s;
  }

  /* Crown positions */
  .crown:nth-child(8) {
    top: 15%;
    left: 25%;
    transform: rotate(15deg);
  }
  .crown:nth-child(9) {
    top: 65%;
    left: 15%;
    transform: rotate(-10deg);
  }
  .crown:nth-child(10) {
    top: 35%;
    left: 75%;
    transform: rotate(5deg);
  }

  /* Glitter particles */
  .glitter {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    animation: glitter-fall 5s linear infinite;
  }

  /* Animations */
  @keyframes wave {
    0% {
      transform: translateX(-50%) scaleY(1);
    }
    50% {
      transform: translateX(0%) scaleY(1.5);
    }
    100% {
      transform: translateX(-50%) scaleY(1);
    }
  }

  @keyframes twinkle {
    0% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  @keyframes crown-glow {
    0% {
      opacity: 0.6;
      filter: drop-shadow(0 0 5px var(--color-start));
    }
    100% {
      opacity: 0.9;
      filter: drop-shadow(0 0 15px var(--color-start));
    }
  }

  @keyframes glitter-fall {
    to {
      transform: translateY(100vh);
    }
  }
</style>
